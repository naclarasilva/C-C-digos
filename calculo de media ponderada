#include<iostream>
#include<locale>
using namespace std;
main (){
	float n1,n2,n3,p1,p2,p3,media;
	cout<< "Informe a primeira nota: " <<endl; cin>> n1;
	cout<<"Informe a segunda nota: " <<endl; cin>>n2;
	cout<<"Informe a terceira nota" <<endl; cin>> n3;
	cout<< "Informe o primeira peso: " <<endl; cin>> p1;
	cout<<"Informe o segunda peso: " <<endl; cin>>p2;
	cout<<"Informe o terceira peso" <<endl; cin>> p3;
	
	
	media=(n1*p1+n2*p2+n3*p3)/(p1+p2+p3);
	cout<<"a media = "<<media<<endl;
	if (media==10){
		cout<<"Voce esta aprovado";}
  else
    cout<<"O peso esta inconsistente";
	

	
	
}
